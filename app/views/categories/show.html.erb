<div class="article-container">
<% @articles.each do |article| %>

 <div class="article-body">
    <img src="https://images.pexels.com/photos/159866/books-book-pages-read-literature-159866.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" alt=""class="article-pic">
    <div class="article-text">
      <%=link_to @category.name, category_path(@category), class: "article-category-link"%>
      <h4>  <%= link_to article.Title, article_path(article) %></h4>
      <p><%=article.Text %></p>
     
    </div>
 </div>
 <%end%>

</div>