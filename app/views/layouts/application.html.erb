<!DOCTYPE html>
<html>
  <head>
    <title>Bookish</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <header> 
      <nav>
        <div class="nav-logo">
          <a href="#" class="nav-logo-link">Bookish</a>
        </div>
        <ul class="navbar">
          <li class="nav-item "><a href="#" class="nav-link active">Home</a></li>
          <li class="nav-item"><a href="#" class="nav-link">Drama</a></li>
          <li class="nav-item"><a href="#" class="nav-link">Fairy Tale</a></li>
          <li class="nav-item"><a href="#" class="nav-link">Sci-Fi</a></li>
        </ul>
        <div class="navbar-right">
          <ul class="navbar">
            <li class="nav-item"><a href="#" class="nav-link">Login</a></li>
            <li class="nav-item"><a href="#" class="nav-link">Register</a></li>
            <li class="nav-item"><a href="#" class="nav-link"><i class="fas fa-search"></i></a></li>
            
          </ul>
        </div>  
      </nav>
    </header>

    <%= yield %>
    <footer>
      <div class="footer">
        
      </div>
    </footer>
    
  </body>
</html>
